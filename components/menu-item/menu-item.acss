.menu_item {
  margin-bottom: 30rpx;
  border-radius: 8rpx;
  background: #ffffff;
  width: 100%;
  height: 256rpx;
  display: flex;
  padding: 30rpx 16rpx;
}

.menu_img {
  width: 196rpx;
  height: 196rpx;
}

.menu_content {
  margin-left: 30rpx;
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
}

.menu_name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.menu_price {
  font-size: 32rpx;
  font-weight: 500;
  color: #FB4E44;
}
.check_menu_row{
  height: 100%;
  display: flex;
  align-items: flex-end;
  justify-content: flex-end;
}
.menu_num{
  height: 52rpx;
  line-height: 52rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-weight: 500;
  color: #333333;
  font-size: 28rpx;
}
.check_icon{
  width: 52rpx;
  height: 52rpx;
}